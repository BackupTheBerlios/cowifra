	    <SELECT value="debug">debug</SELECT>
	    <SELECT value="info">info</SELECT>	    
	    <SELECT value="notice">notice</SELECT>	    
	    <SELECT value="warn">warn</SELECT>	    
	    <SELECT value="error">error</SELECT>	    
	    <SELECT value="crit">crit</SELECT>	    
	    <SELECT value="alert">alert</SELECT>	    
	    <SELECT value="ermerg">emerg</SELECT>	    
      </TYPE>	
</STEP>

